# Copia este archivo a terraform.tfvars y completa los valores
# terraform.tfvars está en .gitignore y no se subirá al repositorio

railway_token = "your-railway-api-token-here"
project_name   = "geny-market"
service_name   = "web"
environment    = "production"
region         = "us-west"
domain         = "" # Opcional: "app.tudominio.com"
port           = 80

# Configuración del repositorio de GitHub
github_repo     = "tu-usuario/genY" # Formato: "owner/repo"
github_branch   = "main"            # Rama a desplegar
root_directory  = ""                # Directorio raíz (vacío = raíz del repo)

# Dominio público
generate_domain  = true              # Generar dominio público automáticamente
service_subdomain = "web"            # Subdominio para el servicio

# Configuración de MinIO S3 (para backend de Terraform)
minio_root_user     = "minioadmin"   # Usuario root de MinIO
minio_root_password  = "minioadmin"   # Password root de MinIO (cambiar en producción)
minio_bucket         = "terraform-state" # Nombre del bucket para el estado
